{
  "name": "car4ukraine",
  "version": "3.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:client": "node dist/client/server/server.mjs",
    "i18n:extract": "ng extract-i18n",
    "build:firebase:development": "ng build --configuration development --output-path=./firebase/develop/dist && npm run build:firebase:prepare_development_base --output-path=./firebase/develop/dist",
    "build:firebase:prepare_development_base": "ng build --configuration prepare_development_base --output-path=./firebase/develop/dist",
    "build:firebase:production": "ng build --configuration production --output-path=./firebase/production/dist && npm run build:firebase:prepare_production_base --output-path=./firebase/production/dist",
    "build:firebase:prepare_production_base": "ng build --configuration prepare_production_base --output-path=./firebase/production/dist",
    "serve:development": "http-server firebase/develop/dist/browser"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "v18-lts",
    "@angular/compiler": "v18-lts",
    "@angular/core": "v18-lts",
    "@angular/forms": "v18-lts",
    "@angular/platform-browser": "v18-lts",
    "@angular/platform-browser-dynamic": "v18-lts",
    "@angular/platform-server": "v18-lts",
    "@angular/router": "v18-lts",
    "@angular/ssr": "v18-lts",
    "@ng-icons/core": "29.10.0",
    "@ng-icons/heroicons": "29.10.0",
    "express": "4.21.1",
    "rxjs": "7.8.1",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "v18-lts",
    "@angular/cli": "v18-lts",
    "@angular/compiler-cli": "v18-lts",
    "@angular/localize": "v18-lts",
    "@types/express": "5.0.0",
    "@types/node": "22.9.1",
    "ng-extract-i18n-merge": "2.12.0",
    "tailwindcss": "3.4.15",
    "typescript": "5.5.4"
  }
}
